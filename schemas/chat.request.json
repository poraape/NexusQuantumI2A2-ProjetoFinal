{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ChatRequest",
  "type": "object",
  "required": ["message", "channel"],
  "properties": {
    "message": {
      "type": "string",
      "minLength": 1,
      "maxLength": 4000
    },
    "channel": {
      "type": "string",
      "enum": ["insights", "compliance", "fiscal"]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "traceId": { "type": "string" },
        "locale": { "type": "string", "default": "pt-BR" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
